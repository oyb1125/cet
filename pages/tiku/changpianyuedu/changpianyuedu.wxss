/* pages/tiku/changpianyuedu/changpianyuedu.wxss */
.container{
  display: flex;
  flex-direction: column;
  text-align: center;
  justify-content: center;
  height: 100vh;
  background-color: #f9f9f9
}
.viewcontainer{
  display: flex;
  flex-direction: column;
  height:100%
}
.body{
  display: flex;
  flex-direction: column;
  background-color: #f9f9f9;
  width: 80%;
  padding: 40rpx;
  border-radius: 10rpx;
  margin: 40rpx auto;
  text-align:justify;
}
.xuanxiang{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.checkbox-group{
  display: flex;
  flex-direction: row;
  width: 90%;
  flex-wrap: wrap
}
checkbox{
  border-radius: 10rpx;
  margin: 4rpx 4rpx;
  box-shadow:0rpx 4rpx 8rpx 4rpx #DDDDDD;
  background: #ffffff;
  height: 40rpx;
  width: 72rpx;
  padding: 10rpx
}

/*复选框外框样式*/
checkbox .wx-checkbox-input {
  width: 40rpx;
  height: 40rpx;
  border-radius: 100%;
}
/*复选框外框选中样式*/
checkbox .wx-checkbox-input.wx-checkbox-input-checked {
  border-color: #3cbcee;
}
/*复选框选中后内部样式*/
checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
  width: 60%;
  height: 60%;
  background: #3cbcee;
  border-radius: 100%;
  content: '';
  transform: translate(-50%, -50%) scale(1);
  -webkit-transform: translate(-50%, -50%) scale(1);
}

.myanswers{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  width: 100%;
  height:70rpx;
}
.myanswer{
  display: flex;
  flex-direction: row;
  height:50rpx;
  width: 50rpx;
  justify-content: center;
  align-items: center;
  border-radius: 100%;
  background: #46cad3
}
.movable-view{
  background: #f2f2f2;
  width:97%;
  height:500rpx;
  margin-top:500rpx;
  box-shadow:0rpx 0rpx 8rpx 4rpx #DDDDDD;
  padding: 10rpx;
  border-radius: 10rpx;
}