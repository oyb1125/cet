.container{
  display: flex;
  flex-direction: column;
  text-align: center;
  justify-content: center;
  height: 100vh;
  background-color: #f9f9f9
}
.viewcontainer{
  display: flex;
  flex-direction: column;
  height:100%
}
.body{
  display: flex;
  flex-direction: column;
  background-color: #f9f9f9;
  box-shadow:0rpx 4rpx 8rpx 4rpx #DDDDDD;
  width: 80%;
  padding: 40rpx;
  border-radius: 10rpx;
  margin: 40rpx auto;
  text-align:justify;
}
.xuanxiang{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.radio-group{
  display: flex;
  flex-direction: column;
  width: 90%;
  margin-top: 40rpx
}

/* 单选按钮样式*/

radio{
  border-radius: 10rpx;
  margin: 4rpx 4rpx;
  box-shadow:0rpx 4rpx 8rpx 4rpx #DDDDDD;
  background: #ffffff;
  padding: 10rpx
}

radio .wx-radio-input {
  width: 40rpx;
  height: 40rpx;
  border-radius: 100%;
}

/*单选按钮选中后内部样式*/

radio .wx-radio-input.wx-radio-input-checked {
  border: 4rpx solid #79b5aa;
}

radio .wx-radio-input.wx-radio-input-checked::before {
  /* width: 60%;
  height: 60%; */
  background: #79b5aa;
  border-radius: 100%;
  content: '';
  transform: translate(-50%, -50%) scale(1);
  -webkit-transform: translate(-50%, -50%) scale(1);
}

.myanswers{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  width: 100%;
  height:70rpx
}
.myanswer{
  display: flex;
  flex-direction: row;
  height:50rpx;
  width: 50rpx;
  justify-content: center;
  align-items: center;
  border-radius: 100%;
  background: silver
}
