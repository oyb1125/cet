.container{
  display: flex;
  flex-direction: column;
  height: 100vh;
  width: 95%;
  margin:0 2.5%;
  align-items: center;
  background-color: #f9f9f9
}
.swiper-tab{
  height: 10%;
  width: 100%;
  text-align: center;
  margin-top: 20rpx;
  line-height: 90rpx;
  }
.swiper-tab-list{  
  font-size: 40rpx;
  display: inline-block;
  width: 50%;
  color: #000000;
  border-radius: 20rpx
}
.on{ 
  color: #ffffff;
  background-color: #00aebb;
  border-radius: 10rpx
}
.swiper-box{ 
  display: flex;
  flex-direction: column; 
  height: 90%; 
  width: 100%; 
  overflow: hidden;
}
.zhenti{
  height: 230rpx;
  width: 100%;
  margin: 20rpx auto;
  display: flex;
  flex-direction: row;
  border-radius: 10rpx;
}
.fenlei{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  width: 100%
}
.option{
  display: flex;
  flex-direction: row;
  text-align: center;
  justify-content: center;
  width: 300rpx;
  height: 226rpx;
  border-radius: 10rpx;
  margin: 10rpx auto
}
image{
  width: 100%;
  height: 100%;
}
.tiku-hover{
  background: #dddddd
}
.zhenti-hover{
  background: #dddddd
}