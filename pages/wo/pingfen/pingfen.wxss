.container{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  height: 100vh;
  background: #f9f9f9
}
.kapian{
  display: flex;
  flex-direction: column;
  width: 85%;
  height: 500rpx;
  margin: 80rpx auto;
  border-radius: 20rpx;
  background-color: #ffffff;
  box-shadow:0rpx 4rpx 8rpx 4rpx #DDDDDD;
}
.tijiao{
  height: 120rpx;
  width: 620rpx
}
.tijiao image{
  width: 100%;
  height: 100%
}
.stars{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  height: 40%
}
