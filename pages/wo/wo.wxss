.container{
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color:#f2f2f2;
}

.wo_head{
  width: 100%;
  height: 300rpx;
  background-color: #ffffff;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-top: 20rpx;
  box-shadow:0rpx 4rpx 8rpx 4rpx #DDDDDD;
}

.group{
  background-color: white;
  width: 100%;
  margin-top: 20rpx;
}

.item{
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 95%;
  margin: 0 2.5%;
  height: 90rpx;
}

.i{
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  height: 90rpx;
}

.save_btn{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  width: 120rpx;
  height: 60rpx;
  margin: auto 20rpx;
  border-radius: 20rpx;
}

.item-hover{
  background-color: #f2f2f2
}

image{
  width: 80rpx;
  height: 80rpx;
}

.i text{
  font-size: 40rpx;
  flex-grow: 1;
  margin-left: 35rpx;
}

.item text{
  font-size: 35rpx;
  flex-grow: 1;
  margin-left: 35rpx;
}

.item textarea{
  flex-grow: 1;
  margin-left: 35rpx;
  width:200rpx;
  height:60rpx;
  background:#f0f0f0;
  border-radius:10rpx
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 160rpx;
  height: 160rpx;
  margin: 20rpx;
  border-radius: 10rpx;
}

.userinfo-nickname {
  color: #aaa;
}
button{
    text-decoration: none;
    position: absolute;
    transform: translate(-50%,-50%);
    left: 50%;
    font-size: 48rpx;
    background: linear-gradient(90deg,#03a9f4,#454ec8,#734ec7,#03a9f4);
    background-size: 400%;
    width: 800rpx;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    color: #fff;
    text-transform: uppercase;
    border-radius: 10rpx;
    z-index: 1;
	  animation: shine 8s infinite;
}
button::before{
    content: "";
    position: absolute;
    left: -10rpx;
    right:-10rpx;
    top: -10rpx;
    bottom: -10rpx;
    background: linear-gradient(90deg,#03a9f4,#454ec8,#734ec7,#03a9f4);
    background-size: 400%;
    border-radius: 100rpx;
    filter: blur(40rpx); 
    z-index: -1;
	animation: shine 8s infinite;
}
@keyframes shine{
    100%{
        background-position: -400% 0;
    }
}