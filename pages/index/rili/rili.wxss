/* pages/Calendar/Calendar.wxss */
/* 打卡日历 */
.all{
  background-color: #f9f9f9;
  height: 100vh
}

.all .bar{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.all .bar image{
  width: 100rpx;
  height: 100rpx;
}

.all .week{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 20rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
  margin: 20rpx 0;
  border-radius: 20rpx;
  background-color: #ffffff;
  box-shadow:0rpx 4rpx 8rpx 4rpx #DDDDDD;
}

.all .days{
  margin: 20rpx;
  padding: 10rpx;
  border-radius: 20rpx;
  background-color: #ffffff;
  box-shadow:0rpx 4rpx 8rpx 4rpx #DDDDDD;
}

.all .columns{
  display: flex;
  flex-direction: column;
  justify-content: space-between; 
}

.all .columns .rows{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.all .columns .rows .cell{
  width: 84rpx;
  height: 88rpx;
  margin: 3rpx;
  text-align: center;
  border-radius: 50%;
  display: flex;
  flex-direction: column;
  justify-content: center
}

.nowday{
  width: 84rpx;
  height: 88rpx;
  margin: 3rpx;
  text-align: center;
  border-radius: 50%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  background-color: #e5e5e5
}

.count .daynumber{
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.count .daynumber .day{
  margin-top: 70rpx;
  font-size: 40rpx
}

.count{
  margin: 20rpx;
  padding: 20rpx;
  display: flex;
  text-align: center;
  border-radius: 20rpx;
  flex-direction: column;
  justify-content: center;
  background-color: #ffffff;
  box-shadow:0rpx 4rpx 8rpx 4rpx #DDDDDD;
  align-items: center;
  height: 300rpx
}

.count .number{
  font-weight: bold;
  font-size: 60rpx;
  background-color: #ffffff;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin: 20rrpx;
}
.count text{
  margin: 10rpx;
}
.count_bot{
  display: flex;
  flex-direction: row;
  width: 100%
}
.bot{
  display: flex;
  flex-direction: column;
  width: 50%;
  justify-content: center;
  align-items: center
}
.btn{
  margin: 20rpx;
  padding: 20rpx;
  display: flex;
  text-align: center;
  border-radius: 20rpx;
  flex-direction: column;
  justify-content: center;
  background: #00aebb;
  box-shadow:0rpx 4rpx 8rpx 4rpx #DDDDDD;
  align-items: center;
}
